{
  "name": "h5p-generate-configs",
  "version": "0.1.1",
  "description": "h5p-generate-configs CLI",
  "private": false,
  "types": "build/types/types.d.ts",
  "bin": {
    "h5p-generate-configs": "bin/h5p-generate-configs"
  },
  "scripts": {
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "copyfiles ./src/templates/* ./build/templates",
    "build": "npm run clean-build && npm run compile && npm run copy-templates",
    "prepublishOnly": "npm run build",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "format:check": "eslint \"**/*.{js,jsx,ts,tsx}\" && prettier \"**/*.{js,jsx,ts,tsx,json}\" --check",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage",
    "demo:semantics": "h5p-generate-configs s --in demo/semantics.ts --out demo/semantics.json -t demo/TranslationKey.ts",
    "publish-to-npm": "np"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "latest"
  },
  "devDependencies": {
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "c8": "^7.11.3",
    "copyfiles": "^2.4.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "h5p-types": "^0.0.21",
    "husky": "^5.1.3",
    "np": "^7.6.1",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.0",
    "ts-node": "^10.8.0",
    "typescript": "4.6",
    "vitest": "^0.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
